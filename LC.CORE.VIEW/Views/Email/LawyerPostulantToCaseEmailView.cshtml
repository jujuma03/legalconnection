@model LC.CORE.VIEW.Services.Models.Email.LawyerPostulantToCaseEmailModel

<div class='example-emails margin-bottom-50'>
    <div width='100%' style='background:#006494; padding: 50px 20px; color: #514d6a;'>
        <div style='max-width: 1000px; margin: 0px auto; font-size: 14px'>
            <table border='0' cellpadding='0' cellspacing='0' style='width: 100%; margin-bottom: 20px'>
                <tr>
                    <td style='vertical-align: top;'>
                        <img src='@ConstantHelpers.URL_EMAIL_LOGO' style='height:65px; margin-top:-17px' />
                    </td>
                </tr>
            </table>
            <div style='padding: 40px 40px 20px 40px; background: #fff;'>
                <table border='0' cellpadding='0' cellspacing='0' style='width: 100%;'>
                    <tbody>
                        <tr>
                            <td>
                                <div style='text-align: center'>
                                    <h4 style='margin-bottom: 20px; color: #24222f; font-weight: 600;font-size: 24px;margin-top: 15px;'>
                                        @Model.Title
                                    </h4>
                                </div>
                                <div style='text-align: left ; margin-top:27px ; margin-bottom:20px'>
                                    Hay postulantes para tu caso. Cuando decidas con qué abogado deseas realizar tu primera asesoría legal, debes enviarnos la siguiente información al correo de asesor@legalconnection.pe:
                                </div>


                                @if (!string.IsNullOrEmpty(Model.LinkName))
                                {
                                <div style='text-align: center'>

                                    <a href='@Model.LinkRedirect' style='display:inline-block;padding:11px 30px;margin:20px 0px 30px;font-size:15px;color:#fff;background-color:#006494;border-radius:5px;text-decoration:none'>
                                        @Model.LinkName
                                    </a>
                                </div>
                                }

                                <br />
                                <div style='text-align: left ; margin-top:27px ; margin-bottom:20px'>
                                    1. Voucher de pago al número de cuenta:
                                </div>

                                <div style='margin-top:27px ; margin-bottom:20px'>
                                    <div style="padding:8px; border:2px solid #514d6a">
                                        <span style="font-weight: bold">Nro cuenta en Soles : </span> 2003002705808 <br />
                                        <span style="font-weight: bold">CCI en soles : </span> 003-200-023002705808-33<br />
                                        <span style="font-weight: bold">RUC del Emisor : </span> 20606274395<br />
                                        <span style="font-weight: bold">A nombre : </span> Legal Technology Peru S.A.C<br />
                                    </div>
                                </div>

                                <br />

                                <div style='text-align: left ; margin-top:27px ; margin-bottom:20px'>
                                    2. Fecha y hora propuesta para la reunión con el abogado seleccionado (Google meet, zoom o llamada telefónica)
                                </div>

                                <br />

                                <div style='text-align: center ; margin-top:27px ; margin-bottom:20px'>
                                    Recuerda que si tienes alguna duda y/o consulta, puedes comunicarte al correo de asesor@legalconnection.pe o al número de celular 979306888
                                </div>

                                <div style='text-align: center; color:#bdbdbd'>
                                    <p style='line-height:17px;margin:0px'> Powered by @ConstantHelpers.PROJECT.ToUpper()</p>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
