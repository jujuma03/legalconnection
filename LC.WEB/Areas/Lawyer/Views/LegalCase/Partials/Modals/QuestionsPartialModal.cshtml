@model List<LC.ENTITIES.Custom.General.QuestionCustomModel>

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="questions_modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Preguntas Realizadas</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="form-group m-form__group col-lg-12">
                            <label>@item.Question</label>
                            <textarea class="form-control m-input" required rows="5" readonly>@item.Response</textarea>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>