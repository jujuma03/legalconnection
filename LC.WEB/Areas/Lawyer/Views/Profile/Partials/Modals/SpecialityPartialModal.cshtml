@model LC.WEB.Areas.Lawyer.Models.Profile.BasicInformationViewModel

<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="speciality_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Especialidad</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="speciality_form" autocomplete="off">
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group m-form__group col-lg-12">
                            <label>Especialidades</label>
                            <select id="speciality_select" class="form-control m-select2" required multiple></select>
                        </div>
                        <div class="form-group m-form__group col-lg-12">
                            <label asp-for="SpecialityThemesId">Temas de Especialidad</label>
                            <select asp-for="SpecialityThemesId" class="form-control m-select2" required multiple></select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>