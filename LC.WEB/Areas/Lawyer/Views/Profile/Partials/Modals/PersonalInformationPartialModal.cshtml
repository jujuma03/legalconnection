@model LC.WEB.Areas.Lawyer.Models.Profile.ProfileViewModel
<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="personal_information_modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Informaci&oacute;n de Contacto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="personal_information_form" autocomplete="off">
                <div class="modal-body">
                    <input type="hidden" name="LawyerId" value="@Model.LawyerId" />
                    <div class="row">
                        <div class="form-group m-form__group col-lg-6">
                            <label asp-for="PersonalInformation.HouseNumber">Tel&eacute;fono</label>
                            <input asp-for="PersonalInformation.HouseNumber" class="form-control m-input" maxlength="8"/>
                        </div>
                        <div class="form-group m-form__group col-lg-6">
                            <label asp-for="PersonalInformation.PhoneNumber">Celular</label>
                            <input asp-for="PersonalInformation.PhoneNumber" class="form-control m-input" required maxlength="9"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group m-form__group col-lg-4">
                            <label asp-for="PersonalInformation.DNI">DNI</label>
                            <input asp-for="PersonalInformation.DNI" class="form-control m-input" required maxlength="8"/>
                        </div>
                        <div class="form-group m-form__group col-lg-4">
                            <label asp-for="PersonalInformation.BirthDate">Fec. de Nacimiento</label>
                            <input asp-for="PersonalInformation.BirthDate" class="form-control m-input datepicker_input" required />
                        </div>
                        <div class="form-group m-form__group col-lg-4">
                            <label asp-for="PersonalInformation.Sex">G&eacute;nero</label>
                            <select asp-for="PersonalInformation.Sex" class="m-select2 form-control m-input" required>
                                @foreach (var item in ConstantHelpers.ENTITIES.USER.SEX.VALUES)
                                {
                                    <option value="@item.Key">@item.Value</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>