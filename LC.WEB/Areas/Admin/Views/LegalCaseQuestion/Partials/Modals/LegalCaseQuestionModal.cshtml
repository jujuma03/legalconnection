@model LC.WEB.Areas.Admin.Models.LegalCaseQuestion.LegalCaseQuestionViewModel

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="legal_case_question_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Alcance para Casos</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="legal_case_question_form" autocomplete="off">
                <div class="modal-body">
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="form-group m-form__group col-lg-12">
                            <label asp-for="Description">Descripci&oacute;n</label>
                            <textarea class="form-control m-input" placeholder="Ingresar descripción" rows="6" asp-for="Description" required maxlength="500"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>