                </div>
            </div>
            <div class="m-portlet__head-tools">
                @if (!string.IsNullOrEmpty(Model.LawyerPhotoUrl))
                {
                    <button class="btn btn-primary btn-sm m-btn m-btn m-btn--icon" data-toggle="modal" data-target="#modal_lawyer_profile">
                        <span>
