    <form id="main_form">
        <div class="m-portlet__body">
            <div class="form-group m-form__group row">
                <div class="col-lg-12">
                    <label>T&iacute;tulo:</label>
                    <input class="form-control m-input" asp-for="Title" readonly>
                </div>
            </div>
            <div class="form-group m-form__group row">
                <div class="col-lg-12">
                    <label>Asunto:</label>
                    <input class="form-control m-input" asp-for="Topic" readonly>
                </div>
            </div>
            <div class="form-group m-form__group row">
                <div class="col-lg-12">
                    <label>Abogado:</label>
                    <input class="form-control m-input" asp-for="Lawyer" readonly>
                </div>
            </div>
            <div class="form-group m-form__group row">
                <div class="col-lg-12">
                    <label>Fec. Publicación:</label>
                    <input class="form-control m-input" asp-for="PublicationDate" readonly>
                </div>
            </div>
            <div class="col-lg-12">
                <label>Imagen de la publicaci&oacute;n:</label>

                <div style="text-align:center">

                    <img id="" src="/documentos/@Model.PhotoUrl" />
                </div>
            </div>
            <div class="col-lg-12">
                <label>Imagen del abogado:</label>

                <div style="text-align:center">
                    <img src="@(string.IsNullOrEmpty(Model.LawyerPhotoUrl)?"/images/general/profile.jpg":$"/documentos/{Model.LawyerPhotoUrl}")" style="max-width:130px" />
                    @*<img id="" src="/documentos/@Model.LawyerPhotoUrl" />*@
                </div>
            </div>
            <div class="form-group m-form__group row">
                <div class="col-lg-12">
                    <label>Asunto:</label>
                    <p>
                        @Html.Raw(Model.Description)
                    </p>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="modal" tabindex="-1" role="dialog" id="modal_lawyer_profile">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Foto del Perfil del Abogado</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row d-flex justify-content-center">
                    <img src="/documentos/@Model.LawyerPhotoUrl" alt="Foto de Perfil del Abogado" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="modal_publication_photo">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Foto de la Publicación</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row d-flex justify-content-center">
                    <img src="/documentos/@Model.PhotoUrl" alt="Foto de Publicación" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/areas/admin/blog/lawyerpublicationdetail.js" asp-append-version="true"></script>
}
