@model LC.WEB.Areas.Admin.Models.Blog.LawyerPublicationViewModel

@{
    ViewData["Title"] = "Detalle de Publicación";
    ViewData["Breadcrumbs"] = new[] {
    new BreadcrumbViewModel { Name = "Blog" , Controller ="Blog",Action="Index",Area ="Admin" },
    new BreadcrumbViewModel { Name = "Publicaciones de Abogado",Controller ="Blog" ,Action="LawyerPublication", Area="Admin" },
    new BreadcrumbViewModel { Name = ViewData["Title"].ToString() }
    };
}

<div class="m-alert m-alert--icon m-alert--air m-alert--square alert alert-primary alert-dismissible fade show" role="alert">
    <div class="m-alert__icon">
        <i class="la la-info-circle"></i>
    </div>
    @if (!Model.IsInBlog)
    {
        <div class="m-alert__text">
            <strong>Opciones</strong>
        </div>
        <div class="m-alert__actions">
            <button id="add_blog" data-id="@Model.Id" class="btn btn-secondary btn-sm m-btn m-btn--pill m-btn--wide m--font-boldest2">
                Agregar al Blog
            </button>
        </div>
    }
    else
    {
        <div class="m-alert__text">
            <strong>Informaci&oacute;n!</strong> La publicaci&oacute;n ya se encuentra en el blog.
        </div>
    }
</div>

<div class="m-portlet">
    @*@if (!string.IsNullOrEmpty(Model.LawyerPhotoUrl) || !string.IsNullOrEmpty(Model.PhotoUrl))
    {
        <div class="m-portlet__head">
