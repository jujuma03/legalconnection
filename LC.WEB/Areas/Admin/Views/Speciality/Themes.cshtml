@model LC.WEB.Areas.Admin.Models.Speciality.ThemeViewModel
@{
    ViewData["Title"] = "Listado de Temas";
    ViewData["Breadcrumbs"] = new[] {
    new BreadcrumbViewModel { Name = "Listado de especialidades",Controller="Speciality",Action="Index",Area = "Admin" },
    new BreadcrumbViewModel { Name = ViewData["Title"].ToString() },
    };
}

<div class="m-portlet">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text m--font-primary">
                    Especialidad : @Model.Speciality
                </h3>
            </div>
        </div>
        <div class="m-portlet__head-tools">
            <button id="add_theme" class="btn btn-primary btn-sm m-btn m-btn m-btn--icon">
                <span>
                    <i class="la la-plus"></i>
                    <span>Agregar</span>
                </span>
            </button>
        </div>
    </div>
    <div class="m-portlet__body">
        <input type="hidden" asp-for="SpecialityId" />
        <div class="m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
            <div class="row align-items-center">
                <div class="col-xl-8 order-2 order-xl-1">
                    <div class="row">
                        <div class="form-group m-form__group col-xl-4">
                            <div class="m-input m-input-icon m-input-icon--left">
                                <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                                <span class="m-input-icon__icon m-input-icon__icon--left">
                                    <span><i class="la la-search"></i></span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-hover table-bordered m-table m-table--head-bg-primary" id="tbl-data"> </table>
    </div>
</div>

@await Html.PartialAsync("Partials/Modals/ThemePartialModal", Model)

@section Scripts{
    <script src="~/js/areas/admin/speciality/theme.js" asp-append-version="true"></script>
}

