@model LC.WEB.Areas.Admin.Models.Benefit.BenefitViewModel

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="benefit_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="benefit_form" autocomplete="off">
                <div class="modal-body">
                    <input asp-for="Id" type="hidden" />
                    <div class="row">
                        <div class="form-group m-form__group col-lg-12">
                            <label asp-for="Description">Nombre Oficial</label>
                            <textarea asp-for="Description" class="form-control m-input" required maxlength="240" rows="4"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>