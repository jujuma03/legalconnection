@model LC.WEB.Areas.Client.Models.Profile.PersonalInformationViewModel
<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="personal_information_modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Informaci&oacute;n Personal</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="personal_information_form" autocomplete="off">

                <div class="modal-body">
                    <input type="hidden" name="ClientId" value="@Model.ClientId" />
                    <div class="row">
                        <div class="form-group m-form__group col-lg-6">
                            <label asp-for="Name">Nombre</label>
                            <input asp-for="Name" class="form-control m-input" required />
                        </div>
                        <div class="form-group m-form__group col-lg-6">
                            <label asp-for="Surnames">Apellidos</label>
                            <input asp-for="Surnames" class="form-control m-input" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group m-form__group col-lg-6">
                            <label asp-for="HouseNumber">Tel&eacute;fono</label>
                            <input asp-for="HouseNumber" class="form-control m-input" />
                        </div>
                        <div class="form-group m-form__group col-lg-6">
                            <label asp-for="PhoneNumber">Celular</label>
                            <input asp-for="PhoneNumber" class="form-control m-input" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group m-form__group col-lg-4">
                            <label asp-for="DNI">DNI</label>
                            <input asp-for="DNI" class="form-control m-input" required />
                        </div>
                        <div class="form-group m-form__group col-lg-4">
                            <label asp-for="BirthDate">Fec. de Nacimiento</label>
                            <input asp-for="BirthDate" class="form-control m-input datepicker_input" required />
                        </div>
                        <div class="form-group m-form__group col-lg-4">
                            <label asp-for="Sex">G&eacute;nero</label>
                            <select asp-for="Sex" class="m-select2 form-control m-input" required>
                                @foreach (var item in ConstantHelpers.ENTITIES.USER.SEX.VALUES)
                                {
                                    <option value="@item.Key">@item.Value</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row">

                        <div class="form-group m-form__group col-lg-4">
                            <label asp-for="DepartmentId">Departamento</label>
                            <select asp-for="DepartmentId" class="m-select2 form-control" required></select>
                        </div>
                        <div class="form-group m-form__group col-lg-4">
                            <label asp-for="ProvinceId">Departamento</label>
                            <select asp-for="ProvinceId" class="m-select2 form-control" required></select>
                        </div>
                        <div class="form-group m-form__group col-lg-4">
                            <label asp-for="DistrictId">Departamento</label>
                            <select asp-for="DistrictId" class="m-select2 form-control" required></select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>