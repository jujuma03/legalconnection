                                                    <select asp-for="DepartmentId" class="form-control m-input" required></select>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group m-form__group col-lg-6">
                                                    <label asp-for="ProvinceId"></label>
                                                    <select asp-for="ProvinceId" class="form-control m-input" required></select>
