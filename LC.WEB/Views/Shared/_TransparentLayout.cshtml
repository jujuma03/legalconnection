<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@LC.CORE.Helpers.ConstantHelpers.PROJECT</title>
    <meta name="description" content="@LC.CORE.Helpers.ConstantHelpers.PROJECT">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <meta name="google-signin-client_id" content="491229479697-ou0i7nn4m1l120idb8tnf1gvju6batm0.apps.googleusercontent.com">
    <link rel="shortcut icon" href="~/images/logo/favicon.ico" />

    <!--begin::Web font -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=GTM-PDM45VG">
    </script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'GTM-PDM45VG');
    </script>

    <!-- Google Tag Manager -->
    <script>
        (function (w, d, s, l, i) {
            w[l] = w[l] || []; w[l].push({
                'gtm.start':
                    new Date().getTime(), event: 'gtm.js'
            }); var f = d.getElementsByTagName(s)[0],
                j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
                    'https://www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
        })(window, document, 'script', 'dataLayer', 'GTM-PDM45VG');</script>
    <!-- End Google Tag Manager -->


    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-PDM45VG"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->

    <link href="~/assets/css/styles.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/vendors.client.bundle.css" rel="stylesheet" />
    <link href="~/assets/css/style.client.bundle.css" rel="stylesheet" />
    <link href="~/assets/plugins/dataTable/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/css/site.css" asp-append-version="true" rel="stylesheet" type="text/css" />
    <link href="~/css/site_client.css" asp-append-version="true" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", required: false)
</head>

<!-- end::Head -->
<!-- begin::Body -->
<body class="m-page--wide m-header--fixed m-header--fixed-mobile m-footer--push m-aside--offcanvas-default">
    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page" style="position:relative;">
        <header id="m_header" class="m-grid__item m-header" m-minimize="minimize" m-minimize-offset="200" m-minimize-mobile-offset="300" style="height:85px !important;">
            @await Html.PartialAsync("Partials/_TopHeaderPartial")
            <div class="m-header__bottom bg-header-transparent" style="height:85px;">
                <div class="">
                    <div class="m-stack m-stack--ver m-stack--desktop">
                        <nav class="navbar navbar-expand-lg navbar-light" >
                            <div class="container-fluid">
                                <a class="navbar-brand m-brand__logo-wrapper" href="/">
                                    <img class="img_logo2" alt="Legal Connection" src="~/assets/images/logo_horizontal.png" style=" width: 160px;margin:10px">
                                </a>
                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="collapse navbar-collapse" id="navbarCollapse">
                                    <ul class="navbar-nav mr-auto">
                                        @if (ConstantHelpers.ShowAllOptions)
                                        {
                                            @if (ConstantHelpers.ENABLED_DIRECTORY)
                                            {
                                                <li class="nav-item">
                                                    <a class="nav-link" asp-area="Client" asp-action="Index" asp-controller="Lawyer">ENCUENTRA TU ABOGADO</a>
                                                </li>
                                            }
                                            <li class="nav-item">
                                                <a class="nav-link" asp-action="HowItWorks" asp-controller="Portal">¿C&Oacute;MO FUNCIONA?</a>
                                            </li>
                                            @if (!User.Identity.IsAuthenticated || User.IsInRole(ConstantHelpers.ROLES.CLIENT))
                                            {
                                                <li class="nav-item">
                                                    <a class="nav-link" asp-action="Add" asp-controller="LegalCase">REGISTRA TU CASO</a>
                                                </li>
                                            }
                                            <li class="nav-item">
                                                <a class="nav-link" asp-action="AboutUs" asp-controller="Portal">¿QUIENES SOMOS?</a>
                                            </li>
                                        }
                                        <li class="nav-item">
                                            <a class="nav-link" asp-action="Blog" asp-controller="Portal">BLOG</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="https://wa.link/pwp6w4" target="_blank">CONT&Aacute;CTANOS</a>
                                        </li>
                                    </ul>
                                    @if (ConstantHelpers.ShowAllOptions)
                                    {
                                        @await Html.PartialAsync("Partials/_PortalTopBarUserPartial")
                                    }
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </header>

        @RenderBody()

        @await Html.PartialAsync("Partials/_PortalFooterPartial")
    </div>
    <!-- begin::Scroll Top -->
    <div id="m_scroll_top" class="m-scroll-top">
        <i class="la la-arrow-up"></i>
    </div>

    <div id="loading"><img src="~/assets/images/Pulse-1.8s-200px.gif" /></div>
    <!-- end::Scroll Top -->


    <script src="~/assets/plugins/jquery.js" type="text/javascript"></script>
    <script src="~/assets/js/vendors.bundle.js" type="text/javascript"></script>
    <script src="~/assets/js/scripts.bundle.js" type="text/javascript"></script>
    <script src="~/assets/plugins/dataTable/jquery.dataTables.min.js"></script>
    <script src="~/assets/plugins/select2/select2.min.js"></script>
    <script asp-append-version="true" src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>