    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-PDM45VG"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->

    <link href="~/assets/css/vendors.admin.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/style.admin.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/styles.css" rel="stylesheet" type="text/css" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />

    <link href="~/assets/plugins/dataTable/buttons.dataTables.min.css" rel="stylesheet" />
    <link href="~/assets/plugins/dataTable/buttons.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/assets/plugins/dataTable/jquery.dataTables.min.css" rel="stylesheet" />

    <link href="~/css/site_admin.css" rel="stylesheet" type="text/css" />
    @*<link href="~/assets/plugins/dataTable/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />*@

    <link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />


    @RenderSection("Styles", required: false)
</head>

<!-- end::Head -->
<!-- begin::Body -->
<body class="m-page--fluid m-page--loading-enabled m-page--loading m--skin- m-content--skin-light2 m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--fixed m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page">

        <!-- BEGIN: Header -->
        <header id="m_header" class="m-grid__item    m-header lc-layout-admin-header" m-minimize-offset="200" m-minimize-mobile-offset="200">
            <div class="m-container m-container--fluid m-container--full-height">
                <div class="m-stack m-stack--ver m-stack--desktop">

                    <!-- BEGIN: Brand -->
                    <div class="m-stack__item m-brand  m-brand--skin-dark ">
                        <div class="m-stack m-stack--ver m-stack--general">
                            <div class="m-stack__item m-stack__item--middle m-brand__logo">
                                <a href="/" class="m-brand__logo-wrapper">
                                    <img class="img_logo_admin p-md-0 p-sm-0" alt="Legal Connection" src="~/assets/images/logo_horizontal.png">
                                </a>
                            </div>
                            <div class="m-stack__item m-stack__item--middle m-brand__tools">

                                <!-- BEGIN: Responsive Aside Left Menu Toggler -->
                                <a href="javascript:;" id="m_aside_left_offcanvas_toggle" class="m-brand__icon m-brand__toggler m-brand__toggler--left m--visible-tablet-and-mobile-inline-block">
                                    <span></span>
                                </a>

                                <!-- END -->
                                <!-- BEGIN: Topbar Toggler -->
                                <a id="m_aside_header_topbar_mobile_toggle" href="javascript:;" class="m-brand__icon m--visible-tablet-and-mobile-inline-block">
                                    <i class="flaticon-more-v4"></i>
                                </a>

                                <!-- BEGIN: Topbar Toggler -->
                            </div>
                        </div>
                    </div>

                    <!-- END: Brand -->
                    <div class="m-stack__item m-stack__item--fluid m-header-head" id="m_header_nav">
                        <!-- BEGIN: Topbar -->
                        @await Html.PartialAsync("Partials/_TopBarUserPartial")
                        <!-- END: Topbar -->
                    </div>
                </div>
            </div>
        </header>

        <!-- END: Header -->
        <!-- begin::Body -->
        <div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body">

            <!-- BEGIN: Left Aside -->
            <button class="m-aside-left-close  m-aside-left-close--skin-dark " id="m_aside_left_close_btn"><i class="la la-close"></i></button>
            <div id="m_aside_left" class="m-grid__item	m-aside-left  m-aside-left--skin-dark ">

                <!-- BEGIN: Aside Menu -->
                <div id="m_ver_menu" class="m-aside-menu  m-aside-menu--skin-dark m-aside-menu--submenu-skin-dark " m-menu-vertical="1" m-menu-scrollable="1" m-menu-dropdown-timeout="500" style="position: relative;">
                    <ul class="m-menu__nav  m-menu__nav--dropdown-submenu-arrow ">
                        @await Html.PartialAsync("Partials/_TopBarMenuPartial")
                    </ul>
                </div>

                <!-- END: Aside Menu -->
            </div>

            <!-- END: Left Aside -->
            <div class="m-grid__item m-grid__item--fluid m-wrapper">

                <!-- BEGIN: Subheader -->
                <div class="m-subheader ">
                    <div class="d-flex align-items-center">
                        <div class="mr-auto">
                            <h3 class="m-subheader__title m-subheader__title--separator">@ViewBag.Title</h3>
                            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                                <li class="m-nav__item m-nav__item--home">
                                    <a asp-action="Index" asp-controller="Home" class="m-nav__link m-nav__link--icon">
                                        <i class="m-nav__link-icon la la-home"></i>
                                    </a>
                                </li>
                                @if (ViewBag.Breadcrumbs != null)
                                {
                                    @foreach (var item in (IEnumerable<BreadcrumbViewModel>)ViewBag.Breadcrumbs)
                                    {
                                        <li class="m-nav__item">
                                            @if (item.Url != null)
                                            {
                                                <a href="@item.Url" class="m-nav__link">
                                                    <span class="m-nav__link-text">@item.Name</span>
                                                </a>
                                            }
                                            else
                                            {
                                                @if (item.Controller != null)
                                                {
                                                    <a asp-area="@item.Area" asp-controller="@item.Controller" asp-action="@item.Action" class="m-nav__link">
                                                        <span class="m-nav__link-text">@item.Name</span>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a class="m-nav__link">
                                                        <span class="m-nav__link-text">@item.Name</span>
                                                    </a>
                                                }
                                            }
                                        </li>

                                        if (item != ((IEnumerable<BreadcrumbViewModel>)ViewBag.Breadcrumbs).Last())
                                        {
                                            <li class="m-nav__separator">-</li>
                                        }
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- END: Subheader -->
                <div class="m-content">
                    @RenderBody()
                </div>
            </div>
        </div>

        <!-- end:: Body -->
        <!-- begin::Footer -->
        <footer class="m-grid__item		m-footer ">
            <div class="m-container m-container--fluid m-container--full-height m-page__container">
                @await Html.PartialAsync("Partials/_FooterPartial")
            </div>
        </footer>

        <!-- end::Footer -->
    </div>

    <!-- end:: Page -->
    <!-- begin::Scroll Top -->
    <div id="m_scroll_top" class="m-scroll-top">
        <i class="la la-arrow-up"></i>
    </div>
    <div id="loading"><img src="~/assets/images/Pulse-1.8s-200px.gif" /></div>

    <!-- end::Scroll Top -->
    <!-- begin::Quick Nav -->
    <!-- end::Scroll Top -->
    <!-- begin::Quick Nav -->
    <script src="~/assets/plugins/jquery.js" type="text/javascript"></script>
    <script src="~/assets/js/vendors.bundle.js" type="text/javascript"></script>
    <script src="~/assets/js/scripts.bundle.js" type="text/javascript"></script>

    <script src="~/assets/plugins/dataTable/jquery.dataTables.min.js"></script>
    <script src="~/assets/plugins/dataTable/dataTables.buttons.min.js"></script>
    <script src="~/assets/plugins/dataTable/dataTables.bootstrap4.min.js"></script>

    @*<script src="~/assets/plugins/select2/select2.full.min.js"></script>*@
    <script src="~/assets/plugins/select2/select2.min.js"></script>
    <script src="~/js/site.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/i18n/es.js"></script>
    @RenderSection("Scripts", required: false)

    <script>
        $(window).on('load', function () { $('body').removeClass('m-page--loading'); });
    </script>
    <!--end::Page Scripts -->
</body>

<!-- end::Body -->
</html>